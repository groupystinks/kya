{
  "name": "kya",
  "version": "0.1.2",
  "description": "Javascript Object Validation",
  "main": "dist/index.js",
  "types": "dist/kya.d.ts",
  "author": "Lai Chia Sheng <jason0911520@gmail.com> (http://groupystinks.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/groupystinks/kya.git"
  },
  "keywords": [
    "schema",
    "validation",
    "form validation"
  ],
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "jest": "^23.5.0",
    "rimraf": "2.6.2",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.2.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.0.0"
  },
  "scripts": {
    "ts": "tsc --watch",
    "clean": "rimraf dist",
    "build": "tsc --outDir dist",
    "test": "npm run build && node --trace-warnings node_modules/.bin/jest --no-cache",
    "test:watch": "node --trace-warnings node_modules/.bin/jest --no-cache --watch",
    "lint": "tslint 'src/**/*.ts{,x}'",
    "prepublish": "npm run clean && npm run test && npm run lint"
  },
  "dependencies": {
    "@types/invariant": "2.2.29",
    "invariant": "2.2.2",
    "typescript": "3.0.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "modulePathIgnorePatterns": [
      "<rootDir>/web"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
