{
  "compilerOptions": {
    "outDir": "web/src/dist/commonjs",
    "module": "commonjs",
    "target": "ES5",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "exclude": [
    "web",
    "node_modules",
    "build",
    "dist",
    "scripts",
    "test"
  ]
}
